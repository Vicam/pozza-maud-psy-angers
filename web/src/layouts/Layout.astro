---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
const { title = 'Maud Pozza — Psychologue à Angers' } = Astro.props;
---
<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col bg-white text-gray-900">
    <header class="border-b border-gray-200 bg-white/70 backdrop-blur supports-[backdrop-filter]:bg-white/50 sticky top-0 z-40">
      <div class="mx-auto max-w-5xl px-4">
        <Navbar />
      </div>
    </header>
    <main class="flex-1 mx-auto w-full max-w-5xl px-4 py-8">
      <slot />
    </main>
    <footer class="border-t border-gray-200 py-8 text-center text-sm text-gray-600">
      © {new Date().getFullYear()} Maud Pozza — Psychologue à Angers
    </footer>
  </body>
</html>

