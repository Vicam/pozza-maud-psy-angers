---
import Base from "../layouts/Base.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Hero from "../components/Hero.astro";
import Section from "../components/Section.astro";
import Card from "../components/Card.astro";
import Timeline from "../components/Timeline.astro";
import Quote from "../components/Quote.astro";

// Contenu Markdown (copié depuis DOCS/CONTENU.md en fichiers séparés)
import S1 from "../content/home/section-1.md";
import S2 from "../content/home/section-2.md";
import S3 from "../content/home/section-3.md";
import S4a from "../content/home/section-4a.md";
import S4b from "../content/home/section-4b.md";
import S5a from "../content/home/section-5a.md";
import S5b from "../content/home/section-5b.md";
import S6 from "../content/home/section-6.md";
import S7 from "../content/home/section-7.md";
import S8 from "../content/home/section-8.md";
import S9 from "../content/home/section-9.md";
import S10 from "../content/home/section-10.md";
import S11 from "../content/home/section-11.md";
import S12 from "../content/home/section-12.md";
---
<Base>
  <Fragment slot="header"><Header /></Fragment>

  <!-- Hero (Info essentiels + image cabinet) -->
  <Hero />

  <!-- Section 1 -->
  <Section id="intro" title="POZZA Maud Psychologue">
    <S1 />
  </Section>

  <!-- Section 2 -->
  <Section id="quand-consulter" title="Quand consulter un psychologue ?">
    <S2 />
  </Section>

  <!-- Section 3 -->
  <Section id="prestations" title="Les différents types d'accompagnements">
    <S3 />
    <div class="mt-6 inline-flex items-center gap-3">
      <span class="inline-flex items-center rounded-full bg-highlight/20 px-3 py-1 text-accent font-semibold">55 € / ~50 min</span>
      <span class="text-sm text-slate-600">Consultations non remboursées par l'assurance maladie</span>
    </div>
  </Section>

  <!-- Section 4 : 2 cartes -->
  <Section id="suivi" title="Suivi psychologique">
    <div class="grid gap-6 md:grid-cols-2">
      <Card title="Suivi psychologique enfant"><S4a /></Card>
      <Card title="Suivi psychologique adolescent"><S4b /></Card>
    </div>
  </Section>

  <!-- Section 5 : 2 cartes -->
  <Section id="psychopedagogie" title="Psychopédagogie & Parentalité">
    <div class="grid gap-6 md:grid-cols-2">
      <Card title="Psychopédagogie"><S5a /></Card>
      <Card title="Accompagnement à la parentalité"><S5b /></Card>
    </div>
  </Section>

  <!-- Section 6 : preuves -->
  <Section id="formation-pro" title="Formation professionnelle — Ce qui me distingue">
    <S6 />
  </Section>

  <!-- Section 7 : timeline (diplômes) -->
  <Section id="parcours" title="Parcours universitaire">
    <Timeline items={[
      { title: "Université Paris 5 Descartes", subtitle: "Master de psychologie du développement social et cognitif de l'enfant et de l'adolescent", dates: "sept 2017 – juin 2019", text: "Voir détail ci-dessous." }
    ]}/>
    <div class="mt-6"><S7 /></div>
  </Section>

  <!-- Section 8 : bio -->
  <Section id="bio" title="Qui suis-je ?">
    <S8 />
  </Section>

  <!-- Section 9 : citation -->
  <Section id="citation" title="Citation">
    <Quote author="Carl Rogers – psychologue humaniste">
      <S9 />
    </Quote>
  </Section>

  <!-- Section 10 : horaires -->
  <Section id="horaires" title="Horaires d'ouverture">
    <S10 />
    <div class="mt-4">
      <span class="inline-block rounded-2xl border border-accent px-3 py-1 text-accent">Sur rendez-vous uniquement</span>
    </div>
  </Section>

  <!-- Section 11 : contact (form Netlify) -->
  <Section id="contact" title="Contact">
    <S11 />
    <form name="contact" method="POST" data-netlify="true" netlify-honeypot="bot-field" class="mt-6 grid gap-4 max-w-xl">
      <input type="hidden" name="form-name" value="contact" />
      <p class="hidden"><label>Ne pas remplir: <input name="bot-field"></label></p>
      <label class="block">Nom <input class="mt-1 w-full" name="nom" required></label>
      <label class="block">Email <input class="mt-1 w-full" type="email" name="email" required></label>
      <label class="block">Téléphone <input class="mt-1 w-full" name="telephone"></label>
      <label class="block">Message <textarea class="mt-1 w-full" name="message" rows="6" required></textarea></label>
      <button class="btn-primary w-fit" type="submit">Envoyer</button>
    </form>
  </Section>

  <Fragment slot="footer"><Footer /></Fragment>
</Base>
